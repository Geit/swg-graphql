{
  "name": "swg-graphql",
  "version": "0.1.0",
  "private": true,
  "license": "ISC",
  "workspaces": [
    "src/modules/**/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@types/async": "^3.2.25",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.2.0",
    "@types/oracledb": "^6.10.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-promise": "7.2.1",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "prettier": "3.7.4",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "scripts": {
    "start-built": "node build/index.js",
    "start-dev": "yarn ts-node-dev  -r tsconfig-paths/register src/index.ts",
    "start-dev-sh": "./start.sh",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx .",
    "build": "rimraf build && yarn run tsc && tsc-alias",
    "codegen:main": "graphql-codegen --config codegen.yml || echo \"Could not regenerate root schema, server must be running, skipping for now\" && exit 0",
    "codegen": "yarn codegen:main && yarn workspaces run codegen"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@bull-board/express": "^6.16.2",
    "@elastic/elasticsearch": "^8.5.0",
    "@graphql-tools/schema": "^10.0.31",
    "async": "^3.2.6",
    "binary-parser": "^2.3.0",
    "body-parser": "^2.2.2",
    "bullmq": "^5.66.4",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "elastic-builder": "^2.31.1",
    "express": "^5.2.1",
    "extract-files": "11",
    "glob": "^9.3.3",
    "got": "^11.8.2",
    "graphql": "^16.12.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.12.1",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "oracledb": "^6.10.0",
    "p-limit": "6.2.0",
    "reflect-metadata": "^0.2.2",
    "smart-buffer": "^4.2.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "type-graphql": "^2.0.0-beta.1",
    "typedi": "^0.10.0",
    "value-or-promise": "^1.0.12",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": "data/**/*",
    "targets": [
      "linux"
    ],
    "outputPath": "dist",
    "compress": "Brotli"
  }
}
