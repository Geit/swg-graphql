{
  "name": "swg-graphql",
  "version": "0.1.0",
  "private": true,
  "license": "ISC",
  "workspaces": [
    "src/modules/*"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/introspection": "^2.2.3",
    "@types/async": "^3.2.16",
    "@types/cors": "^2.8.13",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "caxa": "^3.0.1",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "jest": "^29.3.1",
    "prettier": "2.8.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "4.9.4"
  },
  "scripts": {
    "start-built": "yarn node build/index.js",
    "start-dev": "yarn ts-node-dev  -r tsconfig-paths/register src/index.ts",
    "start-dev-sh": "./start.sh",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx .",
    "build": "rimraf build && yarn run tsc",
    "build-dist": "yarn run build && yarn run caxa:linux",
    "codegen:main": "graphql-codegen --config codegen.yml || echo \"Could not regenerate root schema, server must be running, skipping for now\" && exit 0",
    "codegen": "yarn codegen:main && yarn workspaces run codegen",
    "caxa:linux": "caxa --input . --exclude dist --output dist/swg-graphql {{caxa}}/node_modules/.bin/node {{caxa}}/build/index.js"
  },
  "dependencies": {
    "@apollo/server": "^4.3.1",
    "@bull-board/express": "^4.10.2",
    "@elastic/elasticsearch": "^8.5.0",
    "@graphql-tools/schema": "^9.0.13",
    "async": "^3.2.4",
    "binary-parser": "^2.1.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "elastic-builder": "^2.17.3",
    "express": "^4.18.2",
    "got": "^11.8.2",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "knex": "^2.4.1",
    "lodash": "^4.17.21",
    "oracledb": "^5.5.0",
    "p-limit": "3.1.0",
    "reflect-metadata": "^0.1.13",
    "smart-buffer": "^4.2.0",
    "subscriptions-transport-ws": "^0.11.0",
    "type-graphql": "^2.0.0-beta.1",
    "typedi": "^0.10.0",
    "zod": "^3.20.2"
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": "data/**/*",
    "targets": [
      "linux"
    ],
    "outputPath": "dist",
    "compress": "Brotli"
  }
}
